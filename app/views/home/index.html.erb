<div class="min-h-screen bg-slate-950 text-white p-4 sm:p-8" data-controller="calagem">
  <input type="hidden" data-calagem-target="saturacaoValue" value="0">
  <input type="hidden" data-calagem-target="neutralizacaoValue" value="0">
  <input type="hidden" data-param-name="Ve" value="0">
  <input type="hidden" data-param-name="X" value="0">
  <input type="hidden" data-param-name="mt" value="0">

  <div class="max-w-7xl mx-auto space-y-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      
      <div class="lg:col-span-4 space-y-6">
        <div class="bg-slate-900 border border-slate-800 shadow-2xl rounded-3xl p-6">
          <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
            <span class="w-2 h-6 bg-blue-500 rounded-full"></span>
            Análise de Solo
          </h2>

          <div class="mb-6">
            <label class="block text-xs font-bold text-slate-400 mb-2 tracking-widest uppercase">Cultura Alvo</label>
            <select data-action="change->calagem#applyCulture"
                    data-calagem-target="cultureSelect"
                    class="w-full bg-slate-800 border-slate-700 rounded-xl text-sm text-white p-3 outline-none focus:ring-2 focus:ring-blue-500 transition-all">
            </select>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-[11px] font-bold text-slate-400 mb-1.5 uppercase tracking-tighter italic">Ca / Mg (Atual)</label>
              <input type="text" data-calagem-target="currentRatioDisplay" value="0.00" readonly
                     class="w-full bg-slate-800/50 border-slate-700/50 rounded-xl text-sm p-3 font-black text-slate-500 outline-none">
            </div>

            <div>
              <label class="block text-[11px] font-bold text-slate-400 mb-1.5 uppercase tracking-tighter">V<sub>a</sub> (%)</label>
              <input type="number" data-param-name="Va" data-action="input->calagem#calculate"
                     class="w-full bg-slate-800 border-slate-700 rounded-xl text-sm p-3 text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all">
            </div>

            <% [
              ["CTC", "CTC (T)"],
              ["PRNT", "PRNT (%)"],
              ["P-rem", "P-rem (mg/L)"],
              ["Al", "Al (cmol<sub>c</sub>/dm<sup>3</sup>)"],
              ["Ca", "Ca (cmol<sub>c</sub>/dm<sup>3</sup>)"],
              ["Mg", "Mg (cmol<sub>c</sub>/dm<sup>3</sup>)"]
            ].each do |id, label| %>
            <div>
              <label class="block text-[11px] font-bold text-slate-400 mb-1.5 uppercase tracking-tighter">
                <%= label.html_safe %>
              </label>
              <input type="number" data-param-name="<%= id %>" data-action="input->calagem#calculate" step="0.01"
                     <%= 'value=100' if id == 'PRNT' %>
                     class="w-full bg-slate-800 border-slate-700 rounded-xl text-sm p-3 text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all">
            </div>
          <% end %>
          </div>
        </div>

        <div class="bg-slate-900 border border-slate-800 rounded-3xl p-6 shadow-2xl">
          <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
            <span class="w-2 h-6 bg-emerald-500 rounded-full"></span>
            Cálculo de Calagem
          </h2>
          <div class="grid grid-cols-2 gap-4">
            <div class="p-4 bg-blue-500/10 border border-blue-500/20 rounded-2xl text-center">
              <span class="block text-[10px] text-blue-400 font-bold mb-1 uppercase">Saturação</span>
              <div class="flex items-baseline justify-center gap-1">
                <span class="text-3xl font-black text-blue-500" data-calagem-target="saturacaoResult">0.00</span>
                <span class="text-[10px] text-blue-400/60 font-bold">t/ha</span>
              </div>
            </div>
            <div class="p-4 bg-orange-500/10 border border-orange-500/20 rounded-2xl text-center">
              <span class="block text-[10px] text-orange-400 font-bold mb-1 uppercase">Alumínio</span>
              <div class="flex items-baseline justify-center gap-1">
                <span class="text-3xl font-black text-orange-500" data-calagem-target="neutralizacaoResult">0.00</span>
                <span class="text-[10px] text-orange-400/60 font-bold">t/ha</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="lg:col-span-8 space-y-6">
        <div class="bg-slate-900 border border-slate-800 shadow-2xl rounded-3xl overflow-hidden flex flex-col h-full">
          <div class="p-6 border-b border-slate-800 flex justify-between items-center bg-slate-900/50">
            <h2 class="text-xl font-bold flex items-center gap-2">
              <span class="w-2 h-6 bg-emerald-500 rounded-full"></span>
              Comparativo de Investimento
            </h2>
            <button data-action="click->calagem#addProduct"
                    class="bg-blue-600 hover:bg-blue-500 text-white text-xs px-5 py-2.5 rounded-xl font-bold transition-all active:scale-95 shadow-lg shadow-blue-900/20">
                    + Adicionar Produto
            </button>
          </div>

          <div class="p-6 bg-slate-800/30 border-b border-slate-800">
            <div class="max-w-[150px]">
              <label class="text-[10px] font-bold text-slate-500 uppercase block mb-1">Área Total (ha)</label>
              <input type="number" data-calagem-target="area" data-action="input->calagem#calculate"
                     placeholder="0.00"
                     class="w-full bg-slate-800 border-slate-700 rounded-xl text-sm p-2.5 text-white outline-none focus:ring-2 focus:ring-emerald-500">
            </div>
          </div>

          <div class="overflow-x-auto flex-grow">
            <table class="w-full border-collapse">
              <thead>
                <tr class="text-[10px] text-slate-500 tracking-tighter border-b border-slate-800 text-center">
                  <th class="p-4 text-left font-bold uppercase">Corretivo / Garantias</th>
                  <th class="p-4 font-bold uppercase">Relação Ca/Mg <br><span class="text-[8px] opacity-70">Projetada (V<sub>e</sub>)</span></th>
                  <th class="p-4 font-bold uppercase">Custos (R$/t)</th>
                  <th class="p-4 font-bold text-blue-500 uppercase">Investimento (V<sub>e</sub>)</th>
                  <th class="p-4 font-bold text-orange-500 uppercase">Investimento (Al)</th>
                  <th class="p-4 w-10"></th>
                </tr>
              </thead>
              <tbody data-calagem-target="productList" class="divide-y divide-slate-800 text-center">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <template data-calagem-target="productTemplate">
    <tr class="product-row hover:bg-slate-800/40 transition-colors">
      <td class="p-4 text-left">
        <input type="text" placeholder="Nome do Corretivo" class="block w-full bg-transparent border-none p-0 text-sm font-bold text-white placeholder-slate-600 outline-none mb-2">
        <div class="grid grid-cols-3 gap-2">
          <div class="flex flex-col">
            <span class="text-[9px] text-slate-500 font-bold uppercase">PRNT%</span>
            <input type="number" value="100" data-action="input->calagem#updateCalculations" class="product-prnt w-full bg-slate-800 border-slate-700 rounded p-1 text-[10px] text-blue-400 outline-none">
          </div>
          <div class="flex flex-col">
            <span class="text-[9px] text-slate-500 font-bold uppercase">CaO%</span>
            <input type="number" value="30" data-action="input->calagem#updateCalculations" class="product-cao w-full bg-slate-800 border-slate-700 rounded p-1 text-[10px] text-emerald-400 outline-none">
          </div>
          <div class="flex flex-col">
            <span class="text-[9px] text-slate-500 font-bold uppercase">MgO%</span>
            <input type="number" value="12" data-action="input->calagem#updateCalculations" class="product-mgo w-full bg-slate-800 border-slate-700 rounded p-1 text-[10px] text-orange-400 outline-none">
          </div>
        </div>
      </td>
      <td class="p-4">
        <span class="row-projected-ratio font-black">0.00</span>
      </td>
      <td class="p-4">
        <div class="flex flex-col gap-1 items-center">
          <input type="number" data-action="input->calagem#updateCalculations" placeholder="Preço" class="product-price bg-slate-800 border-slate-700 rounded p-1 text-[10px] text-white outline-none w-20">
          <input type="number" data-action="input->calagem#updateCalculations" placeholder="Frete" class="product-freight bg-slate-800 border-slate-700 rounded p-1 text-[10px] text-white outline-none w-20">
        </div>
      </td>
      <td class="p-4">
        <span class="row-total-sat font-black text-sm text-slate-200 block">R$ 0,00</span>
      </td>
      <td class="p-4">
        <span class="row-total-al font-black text-sm text-slate-200 block">R$ 0,00</span>
      </td>
      <td class="p-4">
        <button data-action="click->calagem#removeProduct" class="text-slate-600 hover:text-red-500 transition-colors text-xl font-light">&times;</button>
      </td>
    </tr>
  </template>
</div>
